<body id="personal">

  <div id="header">
    <h1> L2T </h1>
    <nav>
      <%= link_to 'SIGN OUT', '/users/sign_out', :method => :delete %>
    </nav>
  </div>

  <div id="info">

    <div id="pic">
      <img id="profile-img" class="vertalign" src="<%=@personal_info[:image_url]%>" />
    </div>

    <div id="about">
      <div>
        <h3><%=@personal_info[:name]%></h3>
        <p><%=@personal_info[:blurb]%></p>
        <input type="submit" name="inbox" value="inbox"/>
      </div>
    </div>
  </div>

  <div id="feed">
    <div id="news">
      <h2>TWEETS</h2>
      <ul>
        <% @personal_info[:tweets].each do |tweet|%>
          <li><%=tweet.content%></li>
        <% end %>
      </ul>
    </div>
    <div id="matches">
      <ul>
        <h2>MATCHES</h2>
        <% @match_data.each do |match| %>

          <li class="match">

            <div id="match-img">
              <a href="/profile/<%=match["id"]%>">
                <img src="<%=match["image_url"]%>" class='vertalign' />
              </a>
            </div>

            <div id="match-info">
              <h3><%=match["name"]%></h3>
              <p><%=match["blurb"]%></p>
            </div>


            <div id="match-percent">
              <p><%=match["twitter_percent"]%></p>
            </div>

          </li>

        <% end %>
      </ul>
    </div>

  </div>

  <div id="footer"></div>

</body>


